{
  "manifest_version": 3,
  "name": "Smart Reply for Gmail",
  "version": "0.1.0",
  "description": "Suggests draft replies in Gmail based on the current email context.",
  "permissions": ["storage"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["src/content-script.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Smart Reply for Gmail",
    "default_popup": "src/popup.html"
  }
}